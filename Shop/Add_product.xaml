        <TextBlock  Text="Артикул" Margin="118,119,170,175" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="NumCode" Margin="183,119,35,175"/>
        <TextBlock Margin="96,149,169,145" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="77"><Run Text="  "/><Run Text="Количество"/></TextBlock>
        <TextBox x:Name="Num" Margin="183,149,35,145"/>
        <Button x:Name="Cancel" Margin="277,0,10,25" Content="Отмена" Click="Cancel_Click" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Bottom"/>
        <Button x:Name="OK" Content="OK" Margin="215,0,70,25" Click="OK_Click" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
