        mc:Ignorable="d"
        Title="Добавление товара" Height="350" Width="350">
    <Grid>
        <TextBlock x:Name="NameProduct" Margin="33,46,218,248" Text="Категория" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox x:Name="Product" Margin="0,46,35,243" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="176"/>
        <TextBlock Text=" Производитель"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,90,198,206" Height="23" Width="94"/>
